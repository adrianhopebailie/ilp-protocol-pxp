{
  "name": "ilp-transport",
  "version": "0.0.0",
  "description": "Interledger packet transport",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "files": [
    "build/**/*.js",
    "build/**/*.js.map",
    "build/**/*.d.ts",
    "build/doc"
  ],
  "scripts": {
    "clean": "rm -Rf .nyc_output && rm -Rf coverage && rm -Rf build ",
    "build": "tsc",
    "lint": "tslint --project .",
    "pretest": "tsc --build",
    "test": "nyc mocha --colors --require ts-node/register --ui mocha-typescript --require source-map-support/register test/**/*.test.ts",
    "doc": "typedoc --options typedoc.js src/index.ts",
    "codecov": "codecov",
    "preversion": "npm run lint && npm test",
    "prepublishOnly": "npm run lint && npm test && npm run doc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/interledgerjs/ilp-transport.git"
  },
  "author": "Interledger Team <info@interledger.org>",
  "license": "Apache-2.0",
  "dependencies": {
    "@types/verror": "^1.10.3",
    "ilp-logger": "^1.1.3",
    "ilp-packet": "^3.0.8",
    "oer-utils": "^4.0.0",
    "verror": "^1.10.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/chai-as-promised": "^7.1.0",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.12.17",
    "@types/sinon": "^5.0.7",
    "@types/ws": "^6.0.1",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "codecov": "^3.1.0",
    "ilp-protocol-ildcp": "^2.0.1",
    "mocha": "^5.2.0",
    "mocha-typescript": "^1.1.17",
    "nyc": "^13.1.0",
    "sinon": "^7.2.2",
    "source-map-support": "^0.5.9",
    "ts-node": "^7.0.1",
    "tslint": "^5.12.0",
    "tslint-config-standard": "^8.0.1",
    "typedoc": "^0.13.0",
    "typescript": "^3.2.2",
    "ws": "^6.1.2"
  },
  "nyc": {
    "check-coverage": true,
    "lines": 80,
    "statements": 80,
    "functions": 80,
    "branches": 80,
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "test"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "extension": [
      ".ts",
      ".tsx"
    ],
    "sourceMap": true,
    "instrument": true,
    "all": true
  }
}
